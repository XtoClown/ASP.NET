
@{
    ViewData["Title"] = "Registration";
}

@model lr_six.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post" style="width:100%; height:100%; display: flex; flex-direction: column; justify-content: center; align-items: center; margin: 0px; gap: 3%">
    <div style="font-size: 3vmin; display: flex; flex-direction: column; justify-content: center; align-items: center; width: 50%; height: 10%; gap: 20%">
        <div style="display: flex; flex-direction: row; gap: 5%; height: 60%; width: 100%; justify-content: center; align-items: center;">
            <label asp-for="UserNameFromInput" style="height: 60%; font-size: 3vmin; width: 10%; display: flex; align-items: start;">Username:</label>
            <input type="text" asp-for="UserNameFromInput" style="width: 24%; height: 100%; font-size: 3vmin; border-radius: 2vmin; text-indent: 5%" />
        </div>
        <div style="display: flex; justify-content: center; align-items: center;">
            <span asp-validation-for="UserNameFromInput" style="font-size: 2vmin"></span>
        </div>
    </div>
    <div style="font-size: 3vmin; display: flex; flex-direction: column; justify-content: center; align-items: center; width: 50%; height: 10%; gap: 20%">
        <div style="display: flex; flex-direction: row; gap: 5%; height: 60%; width: 100%; justify-content: center; align-items: center;">
            <label asp-for="UserPasswordFromInput" style="height: 60%; font-size: 3vmin; width: 10%; display: flex; align-items: start;">Password:</label>
            <input type="password" asp-for="UserPasswordFromInput" style="width: 24%; height: 100%; font-size: 3vmin; border-radius: 2vmin; text-indent: 5%" />
        </div>
        <div style="display: flex; justify-content: center; align-items: center;">
            <span asp-validation-for="UserPasswordFromInput" style="font-size: 2vmin"></span>
        </div>
    </div>
    <div style="font-size: 3vmin; display: flex; flex-direction: column; justify-content: center; align-items: center; width: 50%; height: 10%; gap: 20%">
        <div style="display: flex; flex-direction: row; gap: 5%; height: 60%; width: 100%; justify-content: center; align-items: center;">
            <label asp-for="UserYearsFromInput" style="height: 60%; font-size: 3vmin; width: 10%; display: flex; align-items: start;">Years:</label>
            <input type="text" asp-for="UserYearsFromInput" style="width: 24%; height: 100%; font-size: 3vmin; border-radius: 2vmin; text-indent: 5%" />
        </div>
        <div style="display: flex; justify-content: center; align-items: center;">
            <span asp-validation-for="UserYearsFromInput" style="font-size: 2vmin"></span>
        </div>
    </div>
    <button style="height: 7%; width: 15%; font-size: 3.5vmin; border-radius: 2vmin">Registration</button>
</form>

